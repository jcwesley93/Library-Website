<h1>New Author</h1>

<% if @author.errors.any?%>
    <ul> 
    <%@author.errors.full_messages.each do |message|%>
    <li>
    <%=message%>
    </li>
    <%end%>
    </ul>
    <%end%>

<%= form_for @author do |f| %>
<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :birth_year %>
<%= f.number_field :birth_year %>
</p>

<%= f.submit %>

<%end%>



